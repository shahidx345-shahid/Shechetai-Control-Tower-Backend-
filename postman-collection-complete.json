{
  "info": {
    "name": "Shechetai Control Tower - Complete API",
    "description": "Complete API collection with API Key authentication pre-configured. All requests use x-api-key header automatically.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "apikey",
    "apikey": [
      {
        "key": "value",
        "value": "{{apiKey}}",
        "type": "string"
      },
      {
        "key": "key",
        "value": "x-api-key",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "apiKey",
      "value": "shechetai_super_secret_key_2025",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Overview",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/overview",
        "description": "Get platform statistics"
      }
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "List Users",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/users?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["users"],
              "query": [
                {"key": "page", "value": "1"},
                {"key": "limit", "value": "10"}
              ]
            }
          }
        },
        {
          "name": "Create User",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"newuser@example.com\",\n  \"name\": \"New User\",\n  \"role\": \"member\"\n}"
            },
            "url": "{{baseUrl}}/users"
          }
        },
        {
          "name": "Get User",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/users/user-001"
          }
        },
        {
          "name": "Update User",
          "request": {
            "method": "PATCH",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Name\"\n}"
            },
            "url": "{{baseUrl}}/users/user-001"
          }
        },
        {
          "name": "Delete User",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/users/user-001"
          }
        }
      ]
    },
    {
      "name": "Agents",
      "item": [
        {
          "name": "List Agents",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/agents"
          }
        },
        {
          "name": "Create Agent",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Support Bot\",\n  \"type\": \"chatbot\",\n  \"teamId\": \"team-001\"\n}"
            },
            "url": "{{baseUrl}}/agents"
          }
        }
      ]
    },
    {
      "name": "Teams",
      "item": [
        {
          "name": "List Teams",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/teams"
          }
        },
        {
          "name": "Get Team Analytics",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/teams/team-001/analytics"
          }
        }
      ]
    },
    {
      "name": "Subscriptions",
      "item": [
        {
          "name": "List Subscriptions",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/subscriptions"
          }
        }
      ]
    },
    {
      "name": "Billing",
      "item": [
        {
          "name": "List Invoices",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/invoices"
          }
        }
      ]
    },
    {
      "name": "Payment Methods",
      "item": [
        {
          "name": "List Payment Methods",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/payment-methods"
          }
        }
      ]
    },
    {
      "name": "Credits",
      "item": [
        {
          "name": "Get Credits",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/credits"
          }
        },
        {
          "name": "Grant Credits",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"teamId\": \"team-001\",\n  \"amount\": 1000\n}"
            },
            "url": "{{baseUrl}}/credits/grant"
          }
        }
      ]
    },
    {
      "name": "Invites",
      "item": [
        {
          "name": "List Invites",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/invites"
          }
        }
      ]
    },
    {
      "name": "Referrals",
      "item": [
        {
          "name": "List Referrals",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/referrals"
          }
        }
      ]
    },
    {
      "name": "White Label",
      "item": [
        {
          "name": "List Configs",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/white-label"
          }
        }
      ]
    },
    {
      "name": "Audit Logs",
      "item": [
        {
          "name": "List Logs",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/audit-logs"
          }
        }
      ]
    },
    {
      "name": "Reports",
      "item": [
        {
          "name": "Usage Report",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/reports/usage?startDate=2024-11-01&endDate=2024-11-28"
          }
        }
      ]
    }
  ]
}
